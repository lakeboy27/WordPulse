<%- include('./partials/header')%>

<%- include('./partials/nav') %>

<div class="w-full pb-10">
    <h1 class="my-5 mx-auto w-max font-semibold text-3xl">blogs </h1>

<div class="w-[90%] mx-auto h-max ">
    
    <div>
        <h1 class="text-4xl font-bold my-4 "><%= blogdescription.title  %></h1>
        <p class="pb-3"><%= blogdescription.createdAt.toString().slice(0,10)%></p>
    </div>
        
    <img class="w-1/2 h-[50vh]  object-cover object-top"  src="<%= blogdescription.blogImage %>" alt="">
    <p class="text-lg my-2"><%= blogdescription.description%></p>
</div>

<div class="w-[90%] mx-auto h-[200px] py-10">

    <h1 class="text-2xl my-2 font-semibold ">Add comments</h1>
    <form class="w-full" action="/users/comment/<%= blogdescription._id %>" method="post">
        <input class="w-[90%] border-2 border-black rounded-[30px] p-3" type="text" placeholder="write your comment" name="comment"> 
        <button class="w-[9%] text-center rounded-[30px] bg-slate-300 py-[15px]" type="submit">submit</button> 
    </form>

    <div class="all comments w-full py-5 flex flex-col gap-3">


        <% blogdescription.comments.forEach((elm) => { %>
            <div class="singlecomment w-[80%] border h-[50px] rounded-[50px] flex items-center px-2">
                <div class="profile w-[40px] h-[40px] bg-red-300 rounded-full overflow-hidden  ">
                    <img  src="<%= elm.postedBy.profile %>" alt="">
                </div>
                <h1 class="ml-5"><%= elm.commentText%></h1>
            </div>
        <% }) %>

        
    </div>

</div>



</div>

<%- include('./partials/footer')%>