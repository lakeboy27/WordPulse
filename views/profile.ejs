<%- include('./partials/header')%>

<%- include('./partials/nav') %>

<div class="w-[80%] h-[80vh]  mx-auto flex flex-col items-center p-10 " >
    <div class="userdets flex gap-5 items-center justify-center">
        <div class="profileimg h-[150px] w-[150px] rounded-full overflow-hidden " >
            <img class="w-[150px] h-[150px] object-cover " src="<%= user.profile %>" alt="">
        </div>
        <div class="userdets">
            <h1 class="text-2xl font-semibold text-zinc-800"><%= user.fullname %> </h1>
            <h1 class="text-xl font-semibold text-zinc-800">@<%= user.username %> </h1>
    
        </div>
    </div>

    <form action="/users/uploadimg/<%= user._id%>" method="post" enctype="multipart/form-data">
        <input type="file" placeholder="file dekho" name="avatar">
        <button>submit</button>
    </form>

    <div class="allblogs">
        <h1 class="text-2xl font-semibold ">all blogs</h1>

        <div class="allblogs flex gap-3 flex-wrap my-10 justify-center ">
            <% user.blogs.forEach((elm) => { %>
                <a href="blogdiscription/<%= elm._id %>">
                    <div class="singleblog w-[300px] h-[300px] bg-gray-300 p-2 rounded">
                        <div class="img w-full h-[85%]">
                            <img class="w-full h-full object-cover" src="<%= elm.blogImage %>" alt="">
                        </div>
                        <div class="h-[15%] description flex  justify-between items-center mt-2 ">
                            <h1 class="text-xl pt-1 capitalize "><%=elm.title.slice(0,10) %></h1>
                            <div class="flex gap-2 items-center ">
                                <a class="text-white bg-green-500 px-4 py-1" href="/update/<%=elm._id%>">update blog</a>
                                <a class="text-red-500 text-xl" href="/delete/<%=elm._id%>"><i class="ri-delete-bin-6-fill"></i></a>
                            </div>

                        </div>
                    </div>
                </a>
            <%})%>
        </div>
    </div>

</div>
<a href="/users/logout">logout</a>



<%- include('./partials/footer')%>